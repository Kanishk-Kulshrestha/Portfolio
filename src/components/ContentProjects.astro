---
interface Project {
    name: string;
    description: string;
    link: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
};

const projects: Project[] = [{
    name: 'Quanta',
    description: 'A lightweight command-line text editor built in C for Linux systems. (should have done for windows, ik)',
    link: {
        url: 'https://github.com/Kanishk-Kulshrestha/Quanta',
    }
}, {
    name: 'RayLite',
    description: 'RayLite is a minimal and efficient ray tracer written from scratch in C++.',
    link: {
        url: 'https://github.com/Kanishk-Kulshrestha/RayLite'
    }
}, {
    name: 'JAPL',
    description: 'Short for \"Just another Programming Language\", a tiny compiler for a custom language, cause why not? ',
    link: {
        url: 'https://github.com/Kanishk-Kulshrestha/JAPL'
    }
    }, {
    name: 'Hive Thread',
    description: 'Room automation with a Locally hosted web API, and ESP controllers',
    link: {
        url: 'https://github.com/Kanishk-Kulshrestha/ESP-project',
    } 
}];
---

<div>

    <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {projects.map(project =>

            <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">

                <h3 class="text-xl font-semibold text-white mb-2">
                    {project.name}
                </h3>

                <p class="text-gray-400">
                    {project.description}
                </p>

                {
                    project.link?.url ?
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || '_blank'}
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            ">
                            {project.link.buttonLabel || 'Open Github'}
                        </a>
                    : null
                }

            </div>

        )}

    </div>

</div>
